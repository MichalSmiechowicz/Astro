<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/moonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Księżyc"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/moonRiseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wschód"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moonText" />

    <TextView
        android:id="@+id/moonRiseTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czas: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moonRiseText" />

    <TextView
        android:id="@+id/moonSetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zachód:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moonRiseTimeText" />

    <TextView
        android:id="@+id/moonSetTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czas:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moonSetText" />

    <TextView
        android:id="@+id/newMoonTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nów:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moonSetTimeText" />

    <TextView
        android:id="@+id/fullMoonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pełnia:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newMoonTimeText" />

    <TextView
        android:id="@+id/moonPhaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faza księżyca (w procentach):"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullMoonText" />

    <TextView
        android:id="@+id/dayOfTheSynodicMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dzień miesiąca synodycznego:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moonPhaseText" />
</androidx.constraintlayout.widget.ConstraintLayout>